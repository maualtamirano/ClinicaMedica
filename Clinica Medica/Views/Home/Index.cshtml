@{
    ViewData["Title"] = "Inicio";
}

@model Clinica_Medica.Models.LoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Ingrese sus datos</h3>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <form asp-action="Index" method="post" style="height: 320px">
                        <div class="form-group">
                            <label asp-for="Username" class="control-label" style="margin-top:10px"></label>
                            <input asp-for="Username" class="form-control" style="margin-top:10px" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label" style="margin-top:10px"></label>
                            <input asp-for="Password" class="form-control" type="password" style="margin-top:10px" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role" style="margin-top:10px">Seleccione su Rol</label>
                            <select asp-for="Role" class="form-control">
                                <option value="Paciente">Paciente</option>
                                <option value="Admin">Doctor</option>
                            </select>
                        </div>
                        <div class="form-group form-check">
                            <input asp-for="RememberMe" class="form-check-input" style="margin-top:10px" />
                            <label asp-for="RememberMe" class="form-check-label" style="margin-top:10px"></label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block" style="margin-top:8px">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>