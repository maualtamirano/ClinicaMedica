@model Clinica_Medica.Models.Pacientescita

@{
    ViewData["Title"] = "Cancelar Cita";
}

<h1>Cancelar Cita</h1>

<p>¿Estas seguro de que quieres cancelar la cita?</p>
<div>
    <h4>Datos de la Cita</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePaciente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePaciente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MotivoCita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MotivoCita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorNombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancelar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-info">Volver a la Lista</a>
    </form>
</div>
